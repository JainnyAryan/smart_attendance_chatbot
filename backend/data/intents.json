{
  "greetings": [
    {
      "tag": "greeting",
      "patterns": [
        "hello",
        "hi",
        "hey",
        "good morning",
        "good evening",
        "how are you?",
        "what's up?",
        "yo"
      ],
      "responses": [
        "Hello {}! How can I assist you today?",
        "Hey {}! Need any help?",
        "Hi {}! How can I help you?"
      ]
    },
    {
      "tag": "goodbye",
      "patterns": ["bye", "goodbye", "see you", "take care", "later"],
      "responses": ["Goodbye! Have a great day!", "See you soon!", "Take care!"]
    },
    {
      "tag": "thanks",
      "patterns": ["thanks", "thank you", "appreciate it", "many thanks"],
      "responses": ["You're welcome!", "Happy to help!", "Anytime!"]
    }
  ],
